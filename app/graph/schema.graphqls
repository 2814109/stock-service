# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Sample {
  id: ID!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewPost {
  id: ID!
  Content: String!
}

type Result {
  response: Boolean!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createPost(input: NewPost!): Result!
}
